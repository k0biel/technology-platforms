<Window x:Class="Lab8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Left">
            <MenuItem Header="File">
                <MenuItem x:Name="MenuItem_Open" Header="Open" Click="MenuItem_Open_Click"/>
                <MenuItem x:Name="MenuItem_Exit" Header="Exit" Click="MenuItem_Exit_Click"/>
            </MenuItem>
        </Menu>
        <TreeView x:Name="treeView" Grid.Column="0" Margin="0,0,1,0" Width="138"/>
        <ScrollViewer Grid.Column="1" HorizontalAlignment="Center" Width="534">
            <TextBlock x:Name="textBlock"/>
        </ScrollViewer>
    </DockPanel>
</Window>
